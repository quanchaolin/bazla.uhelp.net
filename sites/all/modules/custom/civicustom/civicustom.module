<?php

/*
 * Implement hook permissions to control salary access
 *
 *
 */
function civicustom_civicrm_permission(&$permissions) {
  $prefix = ts('CiviCustom') . ': '; // name of extension or module
  $permissions['view salary'] = array(
    $prefix . ts('view salary'),                     // label
    ts('View Salary Info'),  // description
  );
}

